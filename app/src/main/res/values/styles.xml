<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="LaunchTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/launch_theme_bg</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="ContentDialogStyle">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <!-- 无边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 状态栏透明 -->
        <item name="android:statusBarColor">@color/transparent</item>
        <!-- 透明背景 -->
        <item name="android:background">@color/transparent</item>
        <item name="android:windowBackground">@color/transparent</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- Base.Theme.AppCompat.Light.Dialog.Alert 特有的属性，用于指定默认宽度，这里需要禁用 -->
        <item name="android:windowMinWidthMajor">0dp</item>
        <item name="android:windowMinWidthMinor">0dp</item>

        <!-- 浮在 Activity 之上 -->
        <item name="android:windowIsFloating">false</item>
        <!-- 加载动画，优化：DialogFragment展示时太快关闭会导致页面闪烁 -->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>
</resources>